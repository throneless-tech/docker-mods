#!/usr/bin/with-contenv bash

# Exit if no installable apps are provided
if [ -z "${INSTALL_APPS+x}" ]; then
    echo "**** No apps to install ****"
    exit 0
fi

#Split list of packages on delimiter '|'
IFS='|'
INSTALL_APPS=(${INSTALL_APPS})
PROOT=$(which proot-apps)
for APP in "${INSTALL_APPS[@]}"; do
    $PROOT install "${APP}"
done
